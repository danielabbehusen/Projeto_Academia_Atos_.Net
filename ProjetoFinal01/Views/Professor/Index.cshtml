@model IEnumerable<ProjetoFinal01.Models.Professor>

@{
    ViewData["Title"] = "Index";
}

<style>

  
    .bg {
        background: url('https://images.unsplash.com/photo-1605296867304-46d5465a13f1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80') no-repeat;
        width: 100%;
        height: 100vh;
        background-size: 100%;
    }

    th{
        color: white;
    }

    td{
        color: white;
    }

    h1{
        color: white;
    }
</style> 

<div class="bg">
<h1> Professores </h1>

<p>
    <a asp-action="Create">Cadastrar Novo Professor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CREF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CREF)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idProfessor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.idProfessor">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.idProfessor">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
